# Application
APP_ENV=development
APP_DEBUG=true

# Server
SERVER_HOST=localhost
SERVER_PORT=8000

# Database
DB_PROVIDER=chromadb
DB_PATH=./data/vectordb

# Obsidian
VAULT_PATH=/path/to/your/obsidian/vault
TEMPLATES_PATH=templates
ATTACHMENTS_PATH=attachments

# Services
EMAIL_ENABLED=true
EMAIL_CHECK_INTERVAL=15
EMAIL_PROCESSING_PATH=email_processing

AUDIO_ENABLED=true
AUDIO_CHECK_INTERVAL=30
AUDIO_MODEL=base
AUDIO_PROCESSING_PATH=audio_processing

# LLM
OPENAI_API_KEY=your_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Security
API_KEY_REQUIRED=true
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 